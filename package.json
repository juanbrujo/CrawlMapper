{
  "name": "crawlmapper",
  "version": "2.3.3",
  "type": "module",
  "description": "A sitemap content search tool that crawls sitemaps and searches for specific terms in webpage content",
  "main": "index.js",
  "author": "Jorge Epu√±an <juanbrujo@gmail.com>",
  "keywords": [
    "sitemap",
    "web-scraping",
    "content-search",
    "crawler"
  ],
  "license": "ISC",
  "engines": {
    "node": ">=16.0.0"
  },
  "scripts": {
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "start": "node server.js",
    "dev": "node server.js",
    "netlify:dev": "netlify dev",
    "netlify:deploy": "netlify deploy --prod",
    "netlify:deploy:preview": "netlify deploy",
    "setup": "npm install && cd netlify/functions && npm install",
    "setup:functions": "cd netlify/functions && npm install",
    "release": "standard-version",
    "release:minor": "standard-version --release-as minor",
    "release:patch": "standard-version --release-as patch",
    "release:major": "standard-version --release-as major",
    "build": "node build.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "dependencies": {
    "axios": "^1.13.2",
    "cors": "^2.8.5",
    "express": "^5.2.1",
    "xml2js": "^0.6.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "eslint": "^9.39.2",
    "husky": "^9.1.7",
    "netlify-cli": "^17.0.0",
    "prettier": "^3.7.4",
    "standard-version": "^9.5.0",
    "terser": "^5.44.1",
    "vitest": "^1.0.0"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
